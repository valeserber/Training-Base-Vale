<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.valeriaserber.trainingapp">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".TrainingApplication"
        android:allowBackup="true"
        android:icon="@drawable/login_logo"
        android:label="@string/app_name" >
        <activity
            android:name=".activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SignUpActivity"
            android:label="@string/sign_up"
            android:theme="@style/SignUpActionBarTheme"
            android:windowSoftInputMode="stateHidden">
        </activity>
        <activity
            android:name=".activities.UserActivity"
            android:label="@string/wolox"
            android:theme="@style/SignUpActionBarTheme">
        </activity>
        <activity
            android:name=".activities.PictureActivity"
            android:label="@string/wolox"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.UserActivity" />
        </activity>
        <activity
            android:name=".activities.AddNewsActivity"
            android:label="@string/wolox"
            android:theme="@style/SignUpActionBarTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.UserActivity" />
        </activity>
    </application>
</manifest>
